<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File"
			value="./liquid-democracy-api-logs/logs/liquid_democracy_server.log" />
		<param name="Append" value="true" />
		<param name="DatePattern" value="'_'yyyy-MM-dd'.log'" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] boot%X{context} - ${PID} %5p [%t] --- %c{3}: %m%n" />
		</layout>
	</appender>
	<appender name="fileApi" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File"
			value="./liquid-democracy-api-logs/logs/liquid_democracy_api.log" />
		<param name="Append" value="true" />
		<param name="DatePattern" value="'_'yyyy-MM-dd'.log'" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] boot%X{context} - ${PID} %5p [%t] --- %c{3}: %m%n" />
		</layout>
	</appender>
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] boot%X{context} - ${PID} %5p [%t] --- %c{3}: %m%n" />
		</layout>
    </appender>

	<logger name="com.zenika">
		<appender-ref ref="fileApi" />
		<appender-ref ref="console" />
	</logger>
	<logger name="org.springframework">
		<appender-ref ref="file" />
		<appender-ref ref="console" />
	</logger>
	<root>
		<appender-ref ref="file" />
		<appender-ref ref="console" />
	</root>

</log4j:configuration>